@{
    ViewData["Title"] = "Parent Dashboard";
    var parent = ViewBag.Parent as dynamic;
    var children = ViewBag.Children as IEnumerable<dynamic>;
    var notifications = ViewBag.Notifications as IEnumerable<dynamic>;
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <div>
            <h2 class="fw-bold">Welcome, @(parent?.User?.FullName ?? "Parent") ðŸ‘‹</h2>
            <p class="text-muted mb-0">Monitor your childrenâ€™s progress, attendance, and updates here!</p>
        </div>

        <form asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-outline-danger">
                <i class="bi bi-box-arrow-right me-1"></i> Logout
            </button>
        </form>
    </div>

    <div class="row g-3 mb-5">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 text-center py-4">
                <i class="bi bi-people display-5 text-primary"></i>
                <h5 class="fw-bold mt-2">Children Enrolled</h5>
                <p class="fs-4 text-dark fw-semibold mb-0">@((children?.Count() ?? 0))</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 text-center py-4">
                <i class="bi bi-chat-left-dots display-5 text-warning"></i>
                <h5 class="fw-bold mt-2">Notifications</h5>
                <p class="fs-4 text-dark fw-semibold mb-0">@((notifications?.Count() ?? 0))</p>
            </div>
        </div>
    </div>


    <div class="mb-4">
        <h5 class="fw-bold">Notifications</h5>
        @if (notifications != null && notifications.Any())
        {
            <ul class="list-group">
                @foreach (var note in notifications)
                {
                    <li class="list-group-item">
                        <small class="text-muted">@note.SentAt.ToString("MMM dd, yyyy")</small> - @note.Message
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No notifications available.</p>
        }
    </div>

    <h4 class="fw-bold mb-3">Your Children</h4>
    @if (children != null && children.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle table-hover" id="childrenTable">
                <thead class="table-primary">
                    <tr>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Class</th>
                        <th>Performance</th>
                        <th>Attendance</th>
                        <th>Teacher</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var child in children)
                    {
                        <tr data-id="@child.StudentID" style="cursor:pointer;">
                            <td>
                                <img src="@(!string.IsNullOrEmpty(child.ImagePath) ? child.ImagePath : "/images/default-user.png")"
                                     style="width:50px;height:50px;border-radius:50%;object-fit:cover;">
                            </td>
                            <td>@(child.FullName ?? "-")</td>
                            <td>@(child.ClassName ?? "-")</td>
                            <td>
                            
                                <span class="badge bg-info text-dark">@((child.Performance ?? "Good"))</span>
                            </td>
                            <td>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-success" style="width:@child.Attendance%"></div>
                                </div>
                                <small class="text-muted">@child.Attendance% Present</small>
                            </td>
                            <td>@(child.Teacher?.FullName ?? "-")</td>
                            <td>
                                @if (child.IsClockedIn)
                                {
                                    <span class="badge bg-success">Clocked In</span>
                                }
                                else if (child.IsClockedOut)
                                {
                                    <span class="badge bg-secondary">Clocked Out</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    else
    {
        <p class="text-muted">No child records found yet.</p>
    }
</div>

<div class="modal fade" id="studentModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Student Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="studentModalBody">
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.querySelectorAll("#childrenTable tbody tr").forEach(row => {
        row.addEventListener("click", async () => {
            const studentId = row.dataset.id;
            const res = await fetch(`/Parent/StudentDetails?id=${studentId}`);
            if (!res.ok) return;
            const html = await res.text();

            const modalDiv = document.getElementById("studentModalBody");
            if (modalDiv) {
                modalDiv.innerHTML = html;
                const modal = new bootstrap.Modal(document.getElementById("studentModal"));
                modal.show();
            }
        });
    });
</script>
}
