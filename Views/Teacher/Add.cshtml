@{
    ViewData["Title"] = "Add Teacher";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Add New Teacher</h2>
        <p class="text-muted">Fill in the details below to register a new teacher.</p>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">@ViewBag.Error</div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }

    <div class="card shadow-sm border-0 p-4">
        <form method="post" asp-action="Add">
            <div class="row g-4">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Full Name</label>
                    <input type="text" name="fullName" class="form-control" placeholder="Enter full name" required />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Email</label>
                    <input type="email" name="email" class="form-control" placeholder="e.g. teacher@school.com" required />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Phone Number</label>
                    <input type="tel" name="phoneNumber" class="form-control" placeholder="e.g. +234 812 345 6789" />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Class Name</label>
                    <input type="text" name="className" class="form-control" placeholder="e.g. Primary 5A" />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Subject</label>
                    <input type="text" name="subject" class="form-control" placeholder="e.g. Mathematics" />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Password</label>
                    <input type="password" name="password" class="form-control" placeholder="Set teacher account password" required />
                </div>
            </div>

            <div class="text-center mt-5">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-person-plus-fill me-2"></i> Add Teacher
                </button>
                <a href="/Admin/Dashboard" class="btn btn-outline-secondary ms-3">
                    <i class="bi bi-arrow-left me-2"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>
