@model dynamic

<div class="p-4 rounded-4 shadow-lg bg-white position-relative animate__animated animate__fadeIn">
    <div class="d-flex align-items-center mb-4">
        <div class="position-relative me-3">
            <img src="@(!string.IsNullOrEmpty(Model.ImagePath) ? Model.ImagePath : "/images/default-user.png")"
                 class="rounded-circle border border-3 border-primary shadow-sm"
                 style="width:90px;height:90px;object-fit:cover;">
            <span class="position-absolute bottom-0 end-0 bg-success rounded-circle border border-white"
                  style="width:18px;height:18px;"></span>
        </div>
        <div>
            <h4 class="fw-bold mb-1 text-primary">@Model.FullName</h4>
            <span class="badge bg-light text-dark px-3 py-2 shadow-sm">
                <i class="bi bi-book"></i> Class: <strong>@Model.ClassName</strong>
            </span>
        </div>
    </div>

    <div class="border-top pt-3">
        <h6 class="fw-bold text-primary mb-2">
            <i class="bi bi-person-lines-fill me-1"></i> Parent Information
        </h6>
        <div class="ps-2">
            <p class="mb-1"><strong>Name:</strong> @Model.ParentName</p>
            <p class="mb-1"><strong>Email:</strong> <a href="mailto:@Model.ParentEmail" class="text-decoration-none">@Model.ParentEmail</a></p>
        </div>
    </div>
    

    <div class="border-top pt-3 mt-3">
        <h6 class="fw-bold text-primary mb-3">
            <i class="bi bi-calendar-check me-1"></i> Recent Attendance
        </h6>
        @if (Model.Attendance != null && Model.Attendance.Count > 0)
        {
            <div class="table-responsive shadow-sm rounded">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model.Attendance)
                        {
                            <tr>
                                <td>@a.Date.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="badge rounded-pill px-3 py-2 @(a.Status == "Present" ? "bg-success" : "bg-danger")">
                                        @a.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted fst-italic">No recent attendance records.</p>
        }
    </div>

    <div class="border-top pt-3 mt-3">
        <h6 class="fw-bold text-primary mb-2">
            <i class="bi bi-clock-history me-1"></i> Clock Info
        </h6>
        <div class="ps-2">
            <p><strong>Clocked In:</strong> @(Model.ClockInTime?.ToString("hh:mm tt") ?? "<span class='text-danger'>Not yet</span>")</p>
            <p><strong>Clocked Out:</strong> @(Model.ClockOutTime?.ToString("hh:mm tt") ?? "<span class='text-danger'>Not yet</span>")</p>
        </div>
    </div>

    <div class="text-end mt-4">
        <button type="button" class="btn btn-outline-primary rounded-pill px-4 shadow-sm" data-bs-dismiss="modal">
            <i class="bi bi-x-circle me-1"></i> Close
        </button>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
