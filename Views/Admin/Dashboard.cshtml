@{
    ViewData["Title"] = "Admin Dashboard";
    var teachers = ViewBag.Teachers as IEnumerable<dynamic>;
    var parents = ViewBag.Parents as IEnumerable<dynamic>;
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <div>
            <h2 class="fw-bold">Welcome, Principal</h2>
            <p class="text-muted mb-0">Manage Teachers and Parents from here.</p>
        </div>

        <form asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-outline-danger">
                <i class="bi bi-box-arrow-right"></i> Logout
            </button>
        </form>
    </div>

    <div class="d-flex gap-3 mt-4 mb-5 flex-wrap">
        <a href="/Teacher/Add" class="btn btn-primary">
            <i class="bi bi-person-plus me-2"></i> Add Teacher
        </a>
        <a href="/Parent/Add" class="btn btn-success">
            <i class="bi bi-people-fill me-2"></i> Add Parent
        </a>
    </div>

    <hr />

    <h4 class="fw-bold mt-4 mb-3">Registered Teachers</h4>
    @if (teachers != null && teachers.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Class</th>
                        <th>Subject</th>
                        <th>Students</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in teachers)
                    {
                        <tr>
                            <td>@t.FullName</td>
                            <td>@t.Email</td>
                            <td>@t.PhoneNumber</td>
                            <td>@(string.IsNullOrEmpty(t.ClassName) ? "-" : t.ClassName)</td>
                            <td>@(string.IsNullOrEmpty(t.Subject) ? "-" : t.Subject)</td>
                            <td>@t.StudentCount</td>
                            <td><span class="badge bg-info text-dark">@t.Role</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted">No teachers registered yet.</p>
    }

    <h4 class="fw-bold mt-5 mb-3">Registered Parents</h4>
    @if (parents != null && parents.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle table-hover">
                <thead class="table-success">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in parents)
                    {
                        <tr>
                            <td>@p.FullName</td>
                            <td>@p.Email</td>
                            <td><span class="badge bg-secondary">@p.Role</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted">No parents registered yet.</p>
    }

    <p class="text-muted mt-5"><small>© 2025 ClassClockPlus — Administrative Portal</small></p>
</div>
