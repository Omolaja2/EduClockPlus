@{
    ViewData["Title"] = "Admin Dashboard";
    var teachers = ViewBag.Teachers as IEnumerable<dynamic>;
    var parents = ViewBag.Parents as IEnumerable<dynamic>;
}

<style>
    :root {
        --primary-blue: #2563eb;
        --primary-blue-dark: #1e40af;
        --primary-blue-light: #3b82f6;
        --success-green: #10b981;
        --success-green-dark: #059669;
        --danger-red: #ef4444;
        --danger-red-dark: #dc2626;
        --bg-gradient-start: #eff6ff;
        --bg-gradient-end: #dbeafe;
        --card-bg: #ffffff;
        --text-primary: #1e293b;
        --text-secondary: #64748b;
        --border-color: #e2e8f0;
    }

    body {
        background: linear-gradient(135deg, var(--bg-gradient-start) 0%, var(--bg-gradient-end) 100%);
        min-height: 100vh;
    }

    .dashboard-container {
        padding: 2rem 1rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    /* Header Section */
    .dashboard-header {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 20px rgba(37, 99, 235, 0.08);
        animation: fadeIn 0.5s ease-out;
    }

    @@-ms-viewport@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .dashboard-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        letter-spacing: -0.5px;
    }

    .dashboard-subtitle {
        color: var(--text-secondary);
        font-size: 1rem;
        margin-bottom: 0;
    }

    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    /* Buttons */
    .btn-modern {
        border-radius: 12px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        font-size: 0.95rem;
        border: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

    .btn-logout {
        background: white;
        color: var(--danger-red);
        border: 2px solid var(--danger-red);
        box-shadow: 0 2px 8px rgba(239, 68, 68, 0.15);
    }

    .btn-logout:hover {
        background: var(--danger-red);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
    }

    .btn-primary-modern {
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-light) 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
    }

    .btn-primary-modern:hover {
        background: linear-gradient(135deg, var(--primary-blue-dark) 0%, var(--primary-blue) 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(37, 99, 235, 0.4);
        color: white;
    }

    .btn-success-modern {
        background: linear-gradient(135deg, var(--success-green) 0%, #34d399 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }

    .btn-success-modern:hover {
        background: linear-gradient(135deg, var(--success-green-dark) 0%, var(--success-green) 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(16, 185, 129, 0.4);
        color: white;
    }

    /* Action Buttons Container */
    .action-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        margin-bottom: 2rem;
    }

    /* Table Card */
    .table-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 20px rgba(37, 99, 235, 0.08);
        animation: slideUp 0.5s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .table-card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .table-card-title::before {
        content: '';
        width: 4px;
        height: 28px;
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-light) 100%);
        border-radius: 2px;
    }

    /* Modern Table */
    .table-modern {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin-bottom: 0;
    }

    .table-modern thead th {
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-light) 100%);
        color: white;
        font-weight: 600;
        font-size: 0.9rem;
        padding: 1rem 1.25rem;
        text-align: left;
        border: none;
        white-space: nowrap;
    }

    .table-modern thead th:first-child {
        border-radius: 12px 0 0 0;
    }

    .table-modern thead th:last-child {
        border-radius: 0 12px 0 0;
    }

    .table-modern tbody tr {
        transition: all 0.3s ease;
        border-bottom: 1px solid var(--border-color);
    }

    .table-modern tbody tr:hover {
        background: #f8fafc;
        transform: scale(1.01);
        box-shadow: 0 2px 8px rgba(37, 99, 235, 0.08);
    }

    .table-modern tbody tr:last-child {
        border-bottom: none;
    }

    .table-modern tbody td {
        padding: 1rem 1.25rem;
        color: var(--text-primary);
        font-size: 0.95rem;
        vertical-align: middle;
    }

    /* Success Table Variant */
    .table-modern.table-success thead th {
        background: linear-gradient(135deg, var(--success-green) 0%, #34d399 100%);
    }

    /* Badges */
    .badge-modern {
        padding: 0.4rem 0.875rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.85rem;
        display: inline-block;
    }

    .badge-info {
        background: #dbeafe;
        color: var(--primary-blue);
    }

    .badge-secondary {
        background: #e2e8f0;
        color: #475569;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: var(--text-secondary);
    }

    .empty-state i {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.3;
    }

    /* Footer */
    .dashboard-footer {
        text-align: center;
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin-top: 3rem;
        padding: 1rem;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .dashboard-container {
            padding: 1rem 0.75rem;
        }

        .dashboard-header {
            padding: 1.5rem;
            border-radius: 16px;
        }

        .dashboard-title {
            font-size: 1.5rem;
        }

        .dashboard-subtitle {
            font-size: 0.9rem;
        }

        .header-actions {
            gap: 1rem;
        }

        .action-buttons {
            flex-direction: column;
            gap: 0.75rem;
        }

        .btn-modern {
            width: 100%;
            justify-content: center;
            padding: 0.875rem 1.25rem;
        }

        .table-card {
            padding: 1.25rem;
            border-radius: 16px;
            overflow-x: auto;
        }

        .table-card-title {
            font-size: 1.25rem;
        }

        .table-modern {
            font-size: 0.85rem;
        }

        .table-modern thead th,
        .table-modern tbody td {
            padding: 0.75rem 0.875rem;
        }

        /* Make table scrollable on mobile */
        .table-responsive {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .table-modern {
            min-width: 600px;
        }
    }

    @@media (min-width: 769px) and (max-width: 1024px) {
        .dashboard-container {
            padding: 1.5rem;
        }

        .action-buttons {
            gap: 0.875rem;
        }
    }

    @@media (min-width: 1025px) {
        .table-modern tbody tr:hover {
            transform: scale(1.005);
        }
    }

    /* Divider */
    .divider {
        height: 2px;
        background: linear-gradient(90deg, transparent 0%, var(--border-color) 50%, transparent 100%);
        margin: 2rem 0;
        border: none;
    }
</style>


<div class="dashboard-container">
    <div class="dashboard-header">
        <div class="header-actions">
            <div>
                <h2 class="dashboard-title">Welcome, Principal!ðŸ‘‹</h2>
                <p class="dashboard-subtitle">Manage Teachers and Parents from here.</p>
            </div>

            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="btn-modern btn-logout">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </button>
            </form>
        </div>
    </div>

    <div class="action-buttons">
        <a href="/Teacher/Add" class="btn-modern btn-primary-modern">
            <i class="bi bi-person-plus"></i>+ Add Teacher
        </a>
        <a href="/Parent/Add" class="btn-modern btn-success-modern">
            <i class="bi bi-people-fill"></i>+ Add Parent
        </a>
    </div>

    <hr class="divider" />
    <div class="table-card">
        <h4 class="table-card-title">Registered Teachers</h4>
        @if (teachers != null && teachers.Any())
        {
            <div class="table-responsive">
                <table class="table-modern">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Class</th>
                            <th>Subject</th>
                            <th>Students</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in teachers)
                        {
                            <tr>
                                <td><strong>@t.FullName</strong></td>
                                <td>@t.Email</td>
                                <td>@t.PhoneNumber</td>
                                <td>@(string.IsNullOrEmpty(t.ClassName) ? "-" : t.ClassName)</td>
                                <td>@(string.IsNullOrEmpty(t.Subject) ? "-" : t.Subject)</td>
                                <td>@t.StudentCount</td>
                                <td><span class="badge-modern badge-info">@t.Role</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        else
        {
            <div class="empty-state">
                <i class="bi bi-person-x"></i>
                <p>No teachers registered yet.</p>
            </div>
        }
    </div>
    

    <div class="table-card">
        <h4 class="table-card-title">Registered Parents</h4>
        @if (parents != null && parents.Any())
        {
            <div class="table-responsive">
                <table class="table-modern table-success">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in parents)
                        {
                            <tr>
                                <td><strong>@p.FullName</strong></td>
                                <td>@p.Email</td>
                                <td><span class="badge-modern badge-secondary">@p.Role</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-people"></i>
                <p>No parents registered yet.</p>
            </div>
        }
    </div>
    

    <div class="dashboard-footer">
        <small>Â© 2025 ClassClockPlus â€” Administrative Portal</small>
    </div>
</div>

